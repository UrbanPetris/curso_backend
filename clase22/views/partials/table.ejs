<section class="mt-5">
    <div class="d-flex align-items-center justify-content-between">
        <div>
            <h1 class="text-danger"> Vista de productos</h1>
        </div>
        <div>
            <a class="btn btn-info" href="/" role="button">Volver a la carga</a>
        </div>
    </div>
    <% if ( productos.length === 0) { %>
    <h2 class="bg-danger rounded text-center m-4">No se encontraron productos</h2>
    <% } else {%>
    <table class="table table-dark">
        <tr class="text-warning">
            <th>Nombre</th>
            <th>Precio</th>
            <th>Imagen</th>
        </tr>
        <% productos.forEach(function(product) { %>
        <tr>
            <td class="align-middle"><%= product.nombre %></td>
            <td class="align-middle"><%= product.precio %></td>
            <td class="align-middle"><img style="max-width: 48px" src="<%= product.foto %>" alt="<%= product.nombre %>">
            </td>
            <% }) %>
    </table>
    <% } %>
</section>