<section class="mt-5">
    <div class="d-flex align-items-center justify-content-between">
        <div>
            <h1 class="text-danger"> Vista de productos</h1>
        </div>
        <div>
            <a class="btn btn-info" href="/" role="button">Volver a la carga</a>
        </div>
    </div>
    <% if ( productos.length === 0) { %>
    <h2 class="bg-danger rounded text-center m-4">No se encontraron productos</h2>
    <% } else {%>
    <table class="table table-dark">
        <tr class="text-warning">
            <th>Nombre</th>
            <th>Precio</th>
            <th>Imagen</th>
        </tr>
        <% productos.forEach(function(user) { %>
        <tr>
            <td class="align-middle"><%= user.name %></td>
            <td class="align-middle"><%= user.price %></td>
            <td class="align-middle"><img style="max-width: 48px" src="<%= user.url %>" alt="<%= user.name %>"></td>
            <% }) %>
    </table>
    <% } %>
</section>